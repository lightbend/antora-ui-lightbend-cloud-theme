// Allows website pages to include meta tags without the doc name at the end
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<meta itemprop="name" content="{{{detag (or page.title 'Untitled')}}}{{#if site.title}} {{/if}}">
<meta name="twitter:title" content="{{{detag (or page.title 'Untitled')}}}{{#if site.title}} {{/if}}">
<meta property="og:title" content="{{{detag (or page.title 'Untitled')}}}{{#if site.title}} {{/if}}" />

<meta property="og:site_name" content="Cloudflow" />
<meta property="og:type" content="website" />
<meta name="author" content="Cloudflow">

{{#if (or antoraVersion site.antoraVersion)}}
<meta name="generator" content="Antora {{or antoraVersion site.antoraVersion}}">
{{/if}}

{{#if page.canonicalUrl}}
<link rel="canonical" href="{{page.canonicalUrl}}">
<meta property="og:url" content="{{page.canonicalUrl}}" />
{{/if}}

{{#if page.keywords}}
<meta name="keywords" content="{{page.keywords}}">
{{/if}}

{{#if (or page.description page.attributes.description)}}
<meta name="description" content="{{or page.description page.attributes.description}}">
<meta itemprop="description" content="{{or page.description page.attributes.description}}">
<meta name="twitter:description" content="{{or page.description page.attributes.description}}">
<meta property="og:description" content="{{or page.description page.attributes.description}}" />
{{/if}}

<meta itemprop="image" content="{{or page.attributes.social-share-image "https://cloudflow.io/_/img/cloudflow-logo-social.jpg"}}">
<meta name="twitter:image:src" content="{{or page.attributes.social-share-image "https://cloudflow.io/_/img/cloudflow-logo-social.jpg"}}">
<meta property="og:image" content="{{or page.attributes.social-share-image "https://cloudflow.io/_/img/cloudflow-logo-social.jpg"}}" />
<meta property="og:image:secure_url" content="https://cloudflow.io/_/img/cloudflow-full-color.svg" />

<link rel="stylesheet" href="{{uiRootPath}}/css/site.css?v-01">
<link rel="shortcut icon" href="{{uiRootPath}}/img/favicons/favicon.ico" />

{{> head-scripts}}
